@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader class="siteheader">
        <div style="display: flex; justify-content: center; align-items: center; width: 40px; height: 40px; background-color: #f9f9f9; color: #333; border-radius: 50%; border: 2px solid #ccc; font-size: 16px;">
            OM
        </div>
        <FluentSpacer Width="10" />  Oscar Marin
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="/privacy">Privacy</a>
        <FluentSpacer Width="10" />
        <a href="/tos">Terms of Service</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
